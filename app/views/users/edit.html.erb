<div class='col-xs-3'>
  <h2>User info</h2>

  <%= form_with model: @target_user do |f| %>
    
    <div class='field'>
      <label for='user_name'>Name</label>
      <%= f.text_field :name, :class => 'user_name' %>
    </div>
    <div class='field'>
      <label for='user_profile_image'>Image</label>
      <%= f.attachment_field :profile_image, :class => 'user_profile_image' %>
    </div>
    <div class='field'>
      <label for='user_introduction'>introduction</label>
      <%= f.text_area :introduction, :class => 'user_introduction' %>
    </div>
    <div class='actions'>
      <%= f.submit 'Update User' %>
    </div>
  <% end %>
</div>