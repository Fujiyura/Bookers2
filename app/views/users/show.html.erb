<%= render partial: 'shared/sidebar', locals: { user: @target_user, new_book: @new_book, current_user_id: @current_user_id } %>

<div class='col-xs-9'>
<h2>Books</h2>

<table class='table table-hover table-inverse'>
<thead>
<tr> 
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan='3'></th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
  <tr>
      <td>
        <%= attachment_image_tag @target_user, :profile_image, size: '40x40', format: 'jpeg', class: 'attachment', fallback: 'no_image.jpg' %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      <td>
        <%= book.body %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
</div>