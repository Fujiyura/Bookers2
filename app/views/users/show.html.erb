<div class='col-xs-3'>
  <%= render partial: 'shared/sidebar', :locals => {:@user => @target_user, :@new_book => @new_book, :@current_user_id => @current_user_id } %>
</div>

<div class='col-xs-9'>
<h2>Books</h2>

<table class='table table-hover table-inverse'>
<thead>
<tr> 
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="3"></th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
  <tr>
      <td>
        <% if @user.image.present? %>
          <%= image_tag attachment_url(@target_user, :image, :fill, 40, 40, format: 'jpg', class: 'attachment user profile_image fallback') %>
        <% else %>
        <%= image_tag 'no_image.jpg', :alt => 'no_image', :width => '40', :height => '40', :class => 'attachment user profile_image fallback' %>
        <% end %>
      </td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</tbody>
</table>
</div>